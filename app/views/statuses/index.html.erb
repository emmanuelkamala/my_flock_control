<%= render 'layouts/sidebar' %>

<div class="content__details">
  <p style="color: green"><%= notice %></p>
    <div class="resource-title">
      <h1>Statuses</h1>
      <%= link_to "Add Status", new_status_path, class: "btn-success" %>
    </div>
    <div class="table-responsive">
    <table class="table-striped">
      <thead>
        <tr>
          <th class="table-header">Name</th>
          <th colspan="3" class="table-header"></th>
        </tr>
      </thead>

      <tbody>
        <% @statuses.each do |status| %>
          <tr class="table-row">
            <td class="table-data"><%= status.name %></td>
            <td class="table-data"><%= link_to 'Show', status, class: "btn-success" %></td>
            <td class="table-data"><%= link_to 'Edit', edit_status_path(status), class: 'btn-secondary' %></td>
            <td class="table-data"><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
</div>
