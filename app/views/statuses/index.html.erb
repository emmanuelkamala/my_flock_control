<%= render 'layouts/sidebar' %>

<div class="content__details">
  <p style="color: green"><%= notice %></p>
  <h1>Statuses</h1>
    <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center" scope="col">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @statuses.each do |status| %>
          <tr>
            <td class="text-center"><%= status.name %></td>
            <td><%= link_to 'Show', status, class: 'btn btn-sm btn-success text-light' %></td>
            <td><%= link_to 'Edit', edit_status_path(status), class: 'btn btn-sm btn-secondary text-light' %></td>
            <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-light' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  <%= link_to "New status", new_status_path %>
</div>
