<%= render 'layouts/sidebar' %>

<div class="content__details">
  <p style="color: green"><%= notice %></p>
  <div class="resource-title">
    <h1>Types</h1>
    <%= link_to "Add Type", new_type_path, class: "btn-success" %>
  </div>
   <div class="table-responsive">
    <table class="table-striped">
      <thead>
        <tr>
          <th class="table-header" scope="col">Name</th>
          <th colspan="3" class="table-header"></th>
        </tr>
      </thead>

      <tbody>
        <% @types.each do |type| %>
          <tr class="table-row">
            <td class="table-data"><%= type.name %></td>
            <td class="table-data"><%= link_to 'Show', type, class: 'btn-success' %></td>
            <td class="table-data"><%= link_to 'Edit', edit_type_path(type), class: 'btn-secondary' %></td>
            <td class="table-data"><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
</div>
