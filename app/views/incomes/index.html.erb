<%= render 'layouts/sidebar' %>

<div class="content__details">
  <p style="color: green"><%= notice %></p>
    <div class="resource-title">
      <h1>Incomes</h1>
      <%= link_to "Add Income", new_income_path, class: "btn-success" %>
    </div>

    <div class="row">
      <h2>Search...</h2>
      <div class="">
        <%=  form_tag incomes_path, method: :get do %>
          <%= date_field_tag 'search[date_from]', @search.date_from %>
          <%= date_field_tag 'search[date_to]', @search.date_to %>
          <%= submit_tag 'Search', class: '' %>
        <% end %>
      </div>
    </div>

    <div class="table-responsive">

    <table class="table-striped">
      <thead>
        <tr>
          <th class="table-header">Date</th>
          <th class="table-header">Category</th>
          <th class="table-header">Quantity</th>
          <th class="table-header">Unit Price</th>
          <th class="table-header total">Total Income</th>
          <th class="table-header">Description</th>
          <th class="table-header type">Flock Type</th>
          <th colspan="3" class="table-header"></th>
        </tr>
      </thead>

      <tbody>
        <% @incomes.each do |income| %>
          <tr class="table-row">
            <td class="table-data"><%= income.date %></td>
            <td class="table-data"><%= income.category %></td>
            <td class="table-data"><%= income.quantity %></td>
            <td class="table-data"><%= income.unit_price %></td>
            <td class="table-data"><%= number_to_currency(income.amount, :unit => "") %></td>
            <td class="table-data"><%= income.description %></td>
            <td class="table-data"><%= income.type.name %></td>
            <td class="table-data"><%= link_to 'Show', income, class: 'btn-success' %></td>
            <td class="table-data"><%= link_to 'Edit', edit_expense_path(income), class: 'btn-secondary' %></td>
            <td class="table-data"><%= button_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <strong>Total Income</strong> = <%= number_to_currency(@incomes.map(&:amount).sum, :unit => "Tshs. ", :delimiter => ",") %>
  </div>
  
</div>