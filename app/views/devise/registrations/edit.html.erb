<%= render 'layouts/sidebar' %>

<div class="content__details">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: update_user_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form__content">
    <%= f.label :email, class: "form__content-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__content-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form__content">
    <%= f.label :password, class: "form__content-label" %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form__content-field" %> <br />
    <%# <% if @minimum_password_length %>
      <br />
      <%# <%= @minimum_password_length %> 
    <%# <% end %> 
  </div>

  <div class="field form__content">
    <%= f.label :password_confirmation, class: "form__content-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__content-field" %>
  </div>

  <div class="field form__content">
    <%= f.label :current_password, class: "form__content-label" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form__content-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn-success" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", register_path, class: "btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", dashboard_path, class: "btn-back" %>
</div>