<%= form_with(model: flock) do |form| %>
  <% if flock.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flock.errors.count, "error") %> prohibited this flock from being saved:</h2>

      <ul>
        <% flock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :batch_no, style: "display: block" %>
    <%= form.number_field :batch_no %>
  </div>

  <div>
    <%= form.label :date_in, style: "display: block" %>
    <%= form.datetime_field :date_in %>
  </div>

  <div>
    <%= form.label :retirement_date, style: "display: block" %>
    <%= form.datetime_field :retirement_date %>
  </div>

  <div>
    <%= form.label :source, style: "display: block" %>
    <%= form.text_field :source %>
  </div>

  <div>
    <%= form.label :flock_stored, style: "display: block" %>
    <%= form.text_field :flock_stored %>
  </div>

  <div>
    <%= form.label :initial_stock, style: "display: block" %>
    <%= form.number_field :initial_stock %>
  </div>

  <div>
    <%= form.label :current_stock, style: "display: block" %>
    <%= form.number_field :current_stock %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.label :status_id, style: "display: block" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, prompt: true, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :type_id, style: "display: block" %>
    <%= form.collection_select :type_id, Type.all, :id, :name, prompt: true, class: 'form-control' %>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
