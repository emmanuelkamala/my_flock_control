<div class="devise__register">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="details field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "devise__email-field", placeholder: "Email address" 
    %>
  </div>

  <div class="details field">
    <%= f.password_field :password, autocomplete: "new-password", 
        class: "devise__password-field", placeholder: "Password"
    %>
  </div>

  <div class="details field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", 
        class: "devise__password-field", placeholder: "Confirm password"
    %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "devise__register-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>